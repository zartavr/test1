// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"name": "Template Builder",
    "image": "registry.gitlab.thirdpin.io/devops/thirdpin-devcontainer:v.0.7",
	"extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
		"marus25.cortex-debug",
		"marus25.cortex-debug-dp-stm32f4",
		"twxs.cmake",
		"ms-vscode.cmake-tools",
		"cheshirekow.cmake-format",
        "xaver.clang-format",
        "webfreak.debug",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-russian",
        "dan-c-underwood.arm",
        "eamodio.gitlens",
        "cschlosser.doxdocgen",
        "IBM.output-colorizer",
        "lextudio.restructuredtext",
        "jebbs.plantuml",
        "mhutchie.git-graph",
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "clangd.arguments": [
            "--compile-commands-dir=build",
            "-j=12",
            "--cross-file-rename",
            "--clang-tidy",
            "--background-index",
            "--pch-storage=memory"
        ]
    },
	// Cortex-debug plugin use ::1 ipv6 address so enable it
    "runArgs": [
        "--sysctl",
        "net.ipv6.conf.all.disable_ipv6=0"
    ],
    // Install documentation development environment
    "postStartCommand": "sudo pip3 install -r doc/sphinx/requirements.txt",
}
